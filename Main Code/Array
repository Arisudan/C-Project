#include <iostream>
#include <string>
using namespace std;

int main() {
    int maxtasks = 10;
    string tasks[maxtasks]; 
    int taskCount = 0; 
    
    cout << "Enter up to " << maxtasks << " tasks (type 'done' to finish):\n";
    while (taskCount < maxtasks) {
        cout << "Enter task " << taskCount + 1 << ": ";
        string task;
        cin>>task;

        if (task == "done") {
            break;
        }

        tasks[taskCount] = task;
        taskCount++;
    }

    cout <<"\n Your tasks are:" <<endl;
    for (int i = 0; i < taskCount; i++) 
    {
        cout << i + 1 << ") " << tasks[i] << '\n';
    }

    return 0;
}
